<UserControl x:Class="LibraryWPF.PersonnelPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <!-- Define grid rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header or Navigation -->
            <RowDefinition Height="Auto" />
            <!-- Search Bar -->
            <RowDefinition Height="Auto" />
            <!-- DataGrid -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Buttons -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" Margin="5">
            <Button Content="Books" Height="30" Margin="5" Name="BooksNav"/>
            <Button Content="Settings" Height="30" Margin="5" Name="SettingsNav" Click="SettingsButton_Click"/>
            <Button Content="Logout" Height="30" Margin="5" Click="LogoutButton_Click" Name="LogoutNav"/>
        </StackPanel>

        <!-- Search Bar -->
        <DockPanel Grid.Row="2" Grid.Column="1" Margin="10">
            <TextBox x:Name="SearchBox" Width="300" Height="30" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <Button Content="Search" Width="100" Height="30" Click="SearchButton_Click" Name="SearchButton"/>
        </DockPanel>
        <StackPanel Grid.Column="1">
            <Label Name="NumOfActiveMembersLabel" Margin="10"  Content="Number of active members: 5"/>
            <Label Name="NumOfRentedBooksLabel" Margin="10" Content="Number of rented books: 5"/>
        </StackPanel>
            <!-- DataGrid -->
        <DataGrid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="1" x:Name="BooksDataGrid"
          AutoGenerateColumns="True"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Margin="10"
          MouseDoubleClick="BooksDataGrid_MouseDoubleClick" />
    </Grid>
</UserControl>
