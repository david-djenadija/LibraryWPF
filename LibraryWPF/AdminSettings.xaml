<UserControl x:Class="LibraryWPF.AdminSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:LibraryWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <!-- Define grid rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar with Material Design Buttons -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="5" Grid.RowSpan="3">
            <Button Content="Members" Height="30" Margin="5" Click="MembersNav_click" Name="MembersNav"/>
            <Button Content="Books" Height="30" Margin="5" Click="BooksNav_click" Name="BooksNav"/>
            <Button Content="Settings" Height="30" Margin="5" Name="SettingsNav" />
            <Button Content="Logout" Height="30" Margin="5" Click="LogoutButton_Click" Name="LogoutNav"/>
        </StackPanel>

        <!-- Main Content with Material Design Elements -->
        <materialDesign:Card Grid.Column="1" Grid.Row="0" Margin="10" Padding="10">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
                <TextBlock Name="LanLabel"  Text="Language:" Margin="0 0 0 5" Style="{StaticResource MaterialDesignBody1TextBlock}"/>
                <ComboBox  
                          Width="120" 
                          Height="40" 
                          SelectedIndex="0" 
                          Name="LanguageChangeBox" 
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                    <ComboBoxItem Content="English" />
                    <ComboBoxItem Content="Srpski" />
                </ComboBox>
                <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                        Content="Change" 
                        Width="100" 
                        Margin="0 10 0 0" 
                        Click="LanguageChange_Click" 
                        Name="LanButton"/>

                
                <TextBox materialDesign:HintAssist.Hint="Enter Fee" 
                         Width="120" 
                         Height="40" 
                         Margin="0 5 0 5" 
                         Name="FeeBox" 
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                        Content="Update" 
                        Width="100" 
                        Margin="0 10 0 0" 
                        Click="UpdateFineButton_Click" 
                        Name="FeeButton"/>
                <ComboBox materialDesign:HintAssist.Hint="Select Theme" 
          Width="120" 
          Height="40" 
          Name="ThemeChangeBox" 
          SelectionChanged="ThemeChangeBox_SelectionChanged" 
          Style="{StaticResource MaterialDesignComboBox}">
                    <ComboBoxItem Content="Light" />
                    <ComboBoxItem Content="Dark" />
                    <ComboBoxItem Content="Deep Purple" />
                </ComboBox>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>