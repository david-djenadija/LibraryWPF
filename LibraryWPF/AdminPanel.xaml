<UserControl x:Class="LibraryWPF.AdminPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:LibraryWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="40" />
            <RowDefinition Height="160" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="5" Grid.RowSpan="3">
            <Button Content="Members" Height="30" Margin="5" Click="MembersNav_click" Name="MembersNav"/>
            <Button Content="Books" Height="30" Margin="5" Click="BooksNav_click" Name="BooksNav"/>
            <Button Content="Settings" Height="30" Margin="5" Click="SettingsNav_click" Name="SettingsNav" />
            <Button Content="Logout" Height="30" Margin="5" Click="LogoutButton_Click" Name="LogoutNav"/>
        </StackPanel>

        <!-- Search Section -->
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="5">
            <TextBox x:Name="SearchLastNameTextBox" Width="150" Margin="5" />
            <Button Content="Search" Width="100" Margin="5" Click="SearchButton_Click" Name="SearchButton"/>
            <Button Content="Details" Width="100" Margin="5" Click="DetailsButton_Click" Name="DetailsButton"/>
        </StackPanel>
        <!-- DataGrid to Display Members -->
            <DataGrid Grid.Row="1" Grid.RowSpan="2" Grid.Column="1" x:Name="DataGridTable"
          AutoGenerateColumns="True"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          Margin="10" />
            <!-- CRUD Buttons -->
            
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5" Grid.Column="1" Grid.Row="3">
            <Button Content="Create" Width="100" Margin="5" Click="CreateButton_Click" Name="CreateButton"/>
            <Button Content="Update" Width="100" Margin="5"  Click="UpdateButton_Click" Name="UpdateButton"/>
            <Button Content="Delete" Width="100" Margin="5" Click="DeleteButton_Click" Name="DeleteButton"/>
        </StackPanel>


    </Grid>
</UserControl>
