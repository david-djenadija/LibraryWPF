<UserControl x:Class="LibraryWPF.MemberPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Search bar -->
            <RowDefinition Height="*" />
            <!-- DataGrid -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Search Bar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBox x:Name="SearchTextBox" Width="200" Margin="0,0,10,0"  />
            <Button Content="Search" Width="100" Click="SearchButton_Click" Name="SearchButton" />
            <Button Content="Logout" Width="100" Click="LogoutButton_Click" Margin="10 0 10 0" HorizontalAlignment="Right" Name="LogoutButton"/>
            <ComboBox x:Name="LanBox" Width="150" Height="25" Margin="10 0 10 0" SelectionChanged="LanBox_SelectionChanged">
                <ComboBoxItem Content="English"/>
                <ComboBoxItem Content="Srpski"/>
            </ComboBox>
            <ComboBox materialDesign:HintAssist.Hint="Select Theme" 
Width="150" 
Height="26" 
Name="ThemeChangeBox" 
SelectionChanged="ThemeChangeBox_SelectionChanged" 
Style="{StaticResource MaterialDesignComboBox}">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
                <ComboBoxItem Content="Deep Purple" />
            </ComboBox>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="BooksDataGrid" Grid.Row="1" AutoGenerateColumns="False" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
                  SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Book Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Date of Publishing" Binding="{Binding PublicationYear}" Width="*"/>
                <DataGridTextColumn Header="Author Name" Binding="{Binding AuthorName}" Width="*"/>
                <DataGridTextColumn Header="Copies Available" Binding="{Binding CopiesAvailable}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Rent and Reserve Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="10">
            <Button Content="Rent Book" Width="140" Margin="10,0,0,0" Click="RentBookButton_Click" Name="RentButton"/>
            <Button Content="Reserve Book" Width="140" Margin="10,0,0,0" Click="ReserveBookButton_Click" Name="ReserveButton" />
        </StackPanel>

        <DataGrid x:Name="BooksData1Grid" Grid.Row="3" AutoGenerateColumns="False" 
          HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
          SelectionMode="Single" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Book Title" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Date of Publishing" Binding="{Binding PublicationYear}" Width="*"/>
                <DataGridTextColumn Header="Author Name" Binding="{Binding AuthorName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
