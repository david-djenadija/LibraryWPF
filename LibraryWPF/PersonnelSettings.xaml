<UserControl x:Class="LibraryWPF.PersonnelSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:LibraryWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <!-- Define grid rows and columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Header or Navigation -->
            <RowDefinition Height="Auto" />
            <!-- Input Form -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
            <RowDefinition Height="*" />
            <!-- DataGrid -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Buttons -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" VerticalAlignment="Top" Margin="5">
            <Button Content="Books" Height="30" Margin="5" Click="BooksNav_click" Name="BooksNav"/>
            <Button Content="Settings" Height="30" Margin="5" Name="SettingsNav"/>
            <Button Content="Logout" Height="30" Margin="5" Click="LogoutButton_Click" Name="LogoutNav"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Label Content="Language:" Margin="10 10 10 5" Name="LanLabel"/>
            <ComboBox Width="93" Height="25" SelectedIndex="0" Name="LanguageChangeBox">
                <ComboBoxItem Content="English" />
                <ComboBoxItem Content="Srpski" />
            </ComboBox>
            <Button Content="Change" Width="100" Margin="10 5" Click="LanguageChange_Click" Name="LanButton"/>
            <ComboBox materialDesign:HintAssist.Hint="Select Theme" 
Width="120" 
Height="40" 
                      Margin="10 5"
Name="ThemeChangeBox" 
SelectionChanged="ThemeChangeBox_SelectionChanged" 
Style="{StaticResource MaterialDesignComboBox}">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
                <ComboBoxItem Content="Deep Purple" />
            </ComboBox>
        </StackPanel>

    </Grid>
</UserControl>
